<!doctype html>
<html lang="en">
<%- include('../partials/header') %>
<body>
<%- include('../partials/navbar') %>

<main>

    <div class="mt-3">
        <%- include('../partials/toastbar') %>
    </div>

    <div class="container mt-5">

        <h1>Amenities</h1>
        <div class="d-flex justify-content-end mb-4">
            <a href="/amenities/create" class="btn btn btn-success me-2">Add New Amenity</a>
            <a href="/dashboard" class="btn btn-danger">Go Back</a>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>Description</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% amenities.forEach(amenity => { %>
                <tr>
                    <td><%= amenity.description %></td>
                    <td>
                        <a href="/amenities/<%= amenity.amenity_id %>/edit" class="btn btn-secondary">Edit</a>
                        <form action="/amenities/<%= amenity.amenity_id %>/delete" method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
</main>

<%- include('../partials/footer') %>
</body>
</html>
