<!doctype html>
<html lang="en">
<%- include('../partials/header') %>
<body>
<%- include('../partials/navbar') %>

<div class="mt-3">
    <%- include('../partials/toastbar') %>
</div>

<div class="container mt-5">

    <h1>Workspaces</h1>
    <div class="row mb-3">
        <div class="col">
            <form class="d-flex" action="/workspace" method="GET">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search"
                       value="<%= search %>">
                <button class="btn btn-outline-success" type="submit">Search</button>
                <a href="/workspace" class="btn btn-outline-secondary ms-2">Clear Search</a>
            </form>
        </div>
        <div class="col text-end">
            <a href="/workspace/create" class="btn btn-success">Create New Workspace</a>
        </div>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% workspaces.forEach(workspace => { %>
            <tr>
                <td><%= workspace.name %></td>
                <td>
                    <a href="/workspace/<%= workspace.workspace_id %>" class="btn btn-primary">View</a>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination">
            <% for(let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= i === page ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>&search=<%= search %>"><%= i %></a>
                </li>
            <% } %>
        </ul>
    </nav>
</div>

<%- include('../partials/footer') %>
</body>
</html>